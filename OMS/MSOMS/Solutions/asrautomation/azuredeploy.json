{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "omsAutomationAccountName": {
            "type": "string",
            "metadata": {
                "description": "Specify the name of your Automation Account"
            }
        },
        "automationRegion": {
            "type": "string",
            "allowedValues": [
                "westeurope",
                "southeastasia",
                "eastus2",
                "southcentralus",
                "japaneast",
                "northeurope",
                "canadacentral",
                "australiasoutheast",
                "centralindia",
                "westcentralus"                
            ],
            "metadata": {
                "description": "Specify the region for your automation account"
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/krnese/AzureDeploy/master/OMS/MSOMS/Solutions/asrautomation",
            "metadata": {
                "description": "URI to artifacts location"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "defaultValue": "",
            "metadata": {
                "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated"
            }
        }
    },
    "variables": {
        "assets": {
            "aaVariables": {
                "OMSWorkspaceId": {
                    "name": "OMSWorkspaceId",
                    "description": "Workspace ID for the Log Analytics workspace"
                },
                "OMSWorkspaceKey": {
                    "name": "OMSWorkspaceKey",
                    "description": "Primary key for the Log Analytics workspace"
                },
                "AzureSubscriptionId": {
                    "name": "AzureSubscriptionId",
                    "description": "Azure subscription Id"
                }
            },
            "runbooks": {
                "asrPublicIp": {
                    "name": "ASRPublicIP",
                    "url": "[concat(parameters('_artifactsLocation'), '/scripts/ASRPublicIp.ps1', parameters('_artifactsLocationSasToken'))]",
                    "version": "1.0.0.0",
                    "type": "PowerShell",
                    "description": "ASR Runbook to enable public IP on every VM in a Recovery Plan",
                    "Id": ""
                },
                "asrSQLAlwaysOn": {
                    "name": "ASRSQLAlwaysOn",
                    "url": "[concat(parameters('_artifactsLocation'), '/scripts/ASRSQLAlwaysOn.ps1', parameters('_artifactsLocationSasToken'))]",
                    "version": "1.0.0.0",
                    "type": "PowerShellWorkflow",
                    "description": "ASR Runbook to handle SQL Always On failover",
                    "id": ""
                },
                "asrSingleNsg": {
                    "name": "ASRSingleNSG",
                    "url": "[concat(parameters('_artifactsLocation'), '/scripts/ASRSingleNSG.ps1', parameters('_artifactsLocationSasToken'))]",
                    "version": "1.0.0.0",
                    "type": "PowerShell",
                    "description": "ASR Runbook to enable NSG and Public IP on every VM in a Recovery Plan",
                    "id": ""
                },
                "asrSingleLoadBalancer": {
                    "name": "ASRSingleLoadBalancer",
                    "url": "[concat(parameters('_artifactsLocation'), '/scripts/ASRSingleLoadBalancer.ps1', parameters('_artifactsLocationSasToken'))]",
                    "version": "1.0.0.0",
                    "type": "PowerShell",
                    "description": "ASR Runbook to enable a single Load Balancer for all the VMs in the recovery plan",
                    "id": ""
                },
                "asrMultipleLoadBalancers": {
                    "name": "ASRMulitpleLoadBalancers",
                    "url": "[concat(parameters('_artifactsLocation'), '/scripts/ASRMultipleLoadBalancers.ps1', parameters('_artifactsLocationSasToken'))]",
                    "version": "1.0.0.0",
                    "type": "PowerShell",
                    "description": "ASR Runbook to enable multiple Load Balancers for selected VMs in the recovery plan"
                },
                "asrUpdateDns": {
                    "name": "ASRUpdateDNS",
                    "url": "[concat(parameters('_artifactsLocation'), '/scripts/ASRUpdateDNS.ps1', parameters('_artifactsLocationSasToken'))]",
                    "version": "1.0.0.0",
                    "type": "PowerShellWorkflow",
                    "description": "ASR Runbook to update DNS for VMs within the recovery plan"
                }                
            }
        }
    },
    "resources": [
        {
            "name": "[parameters('omsAutomationAccountName')]",
            "type": "Microsoft.Automation/automationAccounts",
            "apiVersion": "2015-10-31",
            "location": "[parameters('automationRegion')]",
            "properties": {
                "sku": {
                    "name": "Basic"
                }
            },
            "resources": [
                {
                    "name": "[variables('assets').aaVariables.AzureSubscriptionId.name]",
                    "type": "variables",
                    "apiVersion": "2015-10-31",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('omsAutomationAccountName'))]"
                    ],
                    "tags": {},
                    "properties": {
                        "description": "[variables('assets').aaVariables.AzureSubscriptionId.description]",
                        "value": "[concat('\"',subscription().subscriptionId,'\"')]"
                    }
                },
                {
                    "name": "[variables('assets').runbooks.asrPublicIp.name]",
                    "type": "runbooks",
                    "apiVersion": "2015-10-31",
                    "location": "[parameters('automationRegion')]",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('omsAutomationAccountName'))]"
                    ],
                    "properties": {
                        "runbookType": "[variables('assets').runbooks.asrPublicIp.type]",
                        "logProgress": true,
                        "logVerbose": false,
                        "description": "[variables('assets').runbooks.asrPublicIp.description]",
                        "publishContentLink": {
                            "uri": "[variables('assets').runbooks.asrPublicIp.url]",
                            "version": "[variables('assets').runbooks.asrPublicIp.version]"
                        }
                    }
                },
                {
                    "name": "[variables('assets').runbooks.asrMultipleLoadBalancers.name]",
                    "type": "runbooks",
                    "apiVersion": "2015-10-31",
                    "location": "[parameters('automationRegion')]",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('omsAutomationAccountName'))]"
                    ],
                    "properties": {
                        "runbookType": "[variables('assets').runbooks.asrMultipleLoadBalancers.type]",
                        "logProgress": true,
                        "logVerbose": false,
                        "description": "[variables('assets').runbooks.asrMultipleLoadBalancers.description]",
                        "publishContentLink": {
                            "uri": "[variables('assets').runbooks.asrMultipleLoadBalancers.url]",
                            "version": "[variables('assets').runbooks.asrMultipleLoadBalancers.version]"
                        }
                    }
                },
                {
                    "name": "[variables('assets').runbooks.asrSingleLoadBalancer.name]",
                    "type": "runbooks",
                    "apiVersion": "2015-10-31",
                    "location": "[parameters('automationRegion')]",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('omsAutomationAccountName'))]"
                    ],
                    "properties": {
                        "runbookType": "[variables('assets').runbooks.asrSingleLoadBalancer.type]",
                        "logProgress": true,
                        "logVerbose": false,
                        "description": "[variables('assets').runbooks.asrSingleLoadBalancer.description]",
                        "publishContentLink": {
                            "uri": "[variables('assets').runbooks.asrSingleLoadBalancer.url]",
                            "version": "[variables('assets').runbooks.asrSingleLoadBalancer.version]"
                        }
                    }
                },
                {
                    "name": "[variables('assets').runbooks.asrUpdateDns.name]",
                    "type": "runbooks",
                    "apiVersion": "2015-10-31",
                    "location": "[parameters('automationRegion')]",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('omsAutomationAccountName'))]"
                    ],
                    "properties": {
                        "runbookType": "[variables('assets').runbooks.asrUpdateDns.type]",
                        "logProgress": true,
                        "logVerbose": false,
                        "description": "[variables('assets').runbooks.asrUpdateDns.description]",
                        "publishContentLink": {
                            "uri": "[variables('assets').runbooks.asrUpdateDns.url]",
                            "version": "[variables('assets').runbooks.asrUpdateDns.version]"
                        }
                    }
                },
                {
                    "name": "[variables('assets').runbooks.asrSingleNsg.name]",
                    "type": "runbooks",
                    "apiVersion": "2015-10-31",
                    "location": "[parameters('automationRegion')]",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('omsAutomationAccountName'))]"
                    ],
                    "properties": {
                        "runbookType": "[variables('assets').runbooks.asrSingleNsg.type]",
                        "logProgress": true,
                        "logVerbose": false,
                        "description": "[variables('assets').runbooks.asrSingleNsg.description]",
                        "publishContentLink": {
                            "uri": "[variables('assets').runbooks.asrSingleNsg.url]",
                            "version": "[variables('assets').runbooks.asrSingleNsg.version]"
                        }
                    }
                },
                {
                    "name": "[variables('assets').runbooks.asrSQLAlwaysOn.name]",
                    "type": "runbooks",
                    "apiVersion": "2015-10-31",
                    "location": "[parameters('automationRegion')]",
                    "dependsOn": [
                        "[concat('Microsoft.Automation/automationAccounts/', parameters('omsAutomationAccountName'))]"
                    ],
                    "properties": {
                        "runbookType": "[variables('assets').runbooks.asrSQLAlwaysOn.type]",
                        "logProgress": true,
                        "logVerbose": false,
                        "description": "[variables('assets').runbooks.asrSQLAlwaysOn.description]",
                        "publishContentLink": {
                            "uri": "[variables('assets').runbooks.asrSQLAlwaysOn.url]",
                            "version": "[variables('assets').runbooks.asrSQLAlwaysOn.version]"
                        }
                    }
                }                                                 
            ]
        }
    ],
    "outputs": {}
}